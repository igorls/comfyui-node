{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build-typescript",
			"type": "shell",
			"command": "bun run build",
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		},
		{
			"label": "build-typescript-watch",
			"type": "shell",
			"command": "bun run build:watch",
			"isBackground": true,
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": "build"
		},
		{
			"label": "demo-server-watch",
			"type": "shell",
			"command": "bun run --hot ./demos/recursive-edit/server.ts",
			"isBackground": true,
			"problemMatcher": [],
			"group": "none",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		}
	]
}